<div class ="page-header">
  <%= link_to 'New Country', new_country_path, :class=> 'btn btn-success pull-right'%>
    <h3> Listing Countries</h3>
</div>

<table class="table table-striped table-responsive">
  <thead>
    <tr>
      <th>Name</th>
      <th>Iso code 2</th>
      <th>Iso code 3</th>
      <th ></th>
    </tr>
  </thead>

  <tbody>
    <% @countries.each do |country| %>
      <tr>
        <td><%= country.name %></td>
        <td><%= country.iso_code_2 %></td>
        <td><%= country.iso_code_3 %></td>
        <td>    
          <div class="btn-group">
            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Action <span class="caret"></span> </button>
              <ul class="dropdown-menu">
                <li><%= link_to 'Show', country %></li>
                <li><%= link_to 'Edit', edit_country_path(country) %></li>
                <li><%= link_to 'Delete', country, method: :delete, data: { confirm: 'Are you sure?' } %></li>
              </ul>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

