  <%= link_to 'Back', customers_path, :class=> 'btn btn-default pull-right' %>
  <h3> <%= @customer.name %></h3>
</div>

  <!-- Table -->
  <table class="table table-striped table-responsive">
    
  <thead>
    <tr>
      <th>Code</th>
      <th>Full code</th>
      <th>Country</th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td><%= @customer.code %></td>
        <td><%= @customer.full_code %></td>
        <td><%= @customer.country.name %></td>
      </tr>
  </tbody>

  </table>