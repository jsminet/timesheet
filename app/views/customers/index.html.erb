<div class ="page-header">
  <%= link_to 'New Customer', new_customer_path, :class=> 'btn btn-success pull-right'%>
    <h3> Listing Customers</h3>
</div>

<table class="table table-striped table-responsive">
  <thead>
    <tr>
      <th>Name</th>
      <th>Code</th>
      <th>Full code</th>
      <th>Country</th>
      <th ></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.name %></td>
        <td><%= customer.code %></td>
        <td><%= customer.full_code %></td>
        <td><%= customer.country.name %></td>
        <td>    
          <div class="btn-group">
            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Action <span class="caret"></span> </button>
              <ul class="dropdown-menu">
                <li><%= link_to 'Show', customer %></li>
                <li><%= link_to 'Edit', edit_customer_path(customer) %></li>
                <li><%= link_to 'Delete', customer, method: :delete, data: { confirm: 'Are you sure?' } %></li>
              </ul>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>