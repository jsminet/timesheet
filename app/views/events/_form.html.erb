<%= simple_form_for(@event) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :start %>
    <%= f.input :finish %>
    <%= f.association :customer %>
    <%= f.association :user %>
    <%= f.input :all_day %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class=>"btn btn-primary" %>
    <%= button_tag "Reset", type: :reset, :class=>"btn btn-default"%>
  </div>
<% end %>
